<div class="sidebar_box">
    <h2><span class="header">Photo</span><% unless hide_edit_links? %>
        <span class="edit_link"><%= link_to "(edit)", :controller => "photo", :action => "upload" %>
        </span><% end %>
        <br clear="all" />
    </h2>
    <div class="sidebar_box_contents">
        <% if @user.photo.exists? %>
        <%= photo_tag(@user) %>
        <% elsif not hide_edit_links? %>
        No photo yet?<%= link_to "Upload one!", :controller => "photo",
        :action => "upload" %>
        <% end %>
    </div>
</div>
